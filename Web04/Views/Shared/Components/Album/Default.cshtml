@model Album
    @addTagHelper *,Web04
<div class="panel panel-default">
    <div class="panel-body">

        <div class="row">
            <div class="col-xs-4">
                <img src="@Model.CoverImageUrl"
                     class="img-responsive img-rounded pull-left" />

            </div>
            <div class="col-xs-8">
                <h2>@Model.Title</h2>

                <vc:song-list album-id="@Model.Id" />
            </div>
        </div>

    </div>
</div>